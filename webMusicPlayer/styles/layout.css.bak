*{
	padding: 0;  /* 内边距 */
	margin: 0;  /* 外边距 */
}

body{
	margin: 0px 90px 10px 90px;
	width: 1100px;   /* 指定页面的宽度，当浏览器缩小时页面的内容的排版不会被打乱 */
	background-image: url(../images/background.jpg);
	background-attachment: fixed;
	background-position: top left;
	background-repeat: repeat-x;
	overflow: auto;
}

#homePage #header{
	background-image: url(../images/tower.jpg);
	min-height: 220px;
}

#briefIntro #header{
	background-image: url(../images/qiubilong.gif);
	min-height: 181px;
}

#educationExp #header{
	background-image: url(../images/xueshi.jpg);
	min-height: 222px;
}

#baseInfo #header{
	background-image: url(../images/baseInfo.jpg);
	min-height: 220px;
}

#hobbysInfo #header{
	background-image: url(../images/hobbys_logo.jpg);
	min-height: 220px;
}

#projectExp #header{
	background-image: url(../images/project_logo.jpg);
	min-height: 200px;
}

#header{
	background-repeat: no-repeat;
	background-position: top right;
	border-width: .1em;
	border-style: solid;
	border-bottom-width: 0;
}

#navigation{
	border-width: .1em;
	border-style: solid;
	border-bottom-width: 0;
	border-top-width: 0;
	padding-left: 5%;
}

#navigation ul{
	width: 100%;
	overflow:hidden;
	border-left-width: .1em;
	border-left-style: solid;
}

#navigation li{
	display: inline;
}

#navigation li a{
	display: block;
	float: left;
	padding: .5em 2em;
	border-right: .1em solid;
}

#content, #introduction{
	border-width: .1em;
	border-style: solid;
	border-top-width: 0;
	padding: 2em 5%;
	line-height: 1.8em;
}

#slideShow{
	width: 80px;
	height: 60px;
	position: relative;
	overflow: hidden;
}


#eduList{
	margin: 10px 0 10px 0;
	width: 586px;
	height: 40px;
	border-width: 3px;
	border-style: double;
	border-color: #00f;
}

#eduList li{
	display: inline;
}

#eduList li a{
	float: left;
	padding: 5px 40px 5px 40px;
	border-right: 2px inset;
}


label{
	display:block;
}

fieldset{
	border: 0;
}

#contact{
	margin: 5px 5px 0 0;
	padding: 5px 10px 5px 10px;
	/* width:600px; */
	border-width: 2px;
	border-style: outset;
	border-color: #f00;
}

#cleanBut,#backHomePageBut{
	margin-left: 100px;
}

#homeBut, #expandOrfoldBut{
	margin: 15px 0 15px 0;
}

#touxiang_div{
	position: absolute; left:815px; top:340px;
}

#hobbys{
	border: 2px dashed;
	width: 548px;
	border-color: #00f;
	margin-top: 10px;
	margin-left: 200px;
	padding: 6px;
}

#hobbys li{
	padding: 3px;
	display: inline;
}

#showPlace{
	margin-top: 5px;
	margin-left: 235px;
}


#audioBar_div{
	border: 3px dashed;
	border-color: #00f;
	width:520px;
	margin: 30px 0 0 0;
}

#song_button{
	border: 3px solid;
	border-color: #00f;
	width:410px;
	padding: 0 0 0 110px;
}
