body{
	font-size: 100%;
	font-family: "Helvetica", "Arial", sans-serif;
}


body *{
	font-size: 1em;
}

a{
	font-weight: bold;
	text-decoration: none;
}

#navigation{
	font-family: "Lucida Grande", "Helvetica", "Arial", sans-serif;
}

#navigation a{
	text-decoration: none;
	font-weight: bold;
}

#content, #introduction{
	line-height: 1.8em;
}
#content p, #introduction p{
	margin: 1em 0;
}

h1 {
	font-family: "Georgia", "Times New Roman", sans-serif;
	font: 2.4em normal;
	font-weight: bold;
}

h2 {
	font-family: "Georgia", "Times New Roman", sans-serif;
	font: 1.8em normal;
	margin-top: 0.1em;
	font-weight: bold;
}

h3 {
	font-family: "Georgia", "Times New Roman", sans-serif;
	font: 1.4em normal;
	margin-top: 0.1em;
	font-weight: bold;
}

#name, #email{
	font-size: 20px;
}